# MCP Server Configuration for Video Directory Backend
# Environment variables for n8n MCP Server integration

# Base Configuration
PAYLOAD_CMS_URL=http://host.docker.internal:3001
PAYLOAD_PUBLIC_SERVER_URL=http://host.docker.internal:3001

# Authentication - Use your existing automation user API key
PAYLOAD_API_KEY=automation-users API-Key 81d19ec-911c-4fe4-92aa-18aadf6659d5

# MCP Server Settings
MCP_SERVER_NAME=video-directory-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=AI-powered video content management tools for YouTube processing

# Security Settings
MCP_AUTH_TYPE=bearerToken
MCP_RATE_LIMIT=100
MCP_TIMEOUT=120000

# Tool Configuration
ENABLE_VIDEO_CREATION=true
ENABLE_VIDEO_UPDATES=true
ENABLE_SKILL_ANALYSIS=true
ENABLE_TAG_ENHANCEMENT=true
ENABLE_VIDEO_SEARCH=true

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Optional: External AI Services (if needed for future enhancements)
# OPENAI_API_KEY=your-openai-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here
